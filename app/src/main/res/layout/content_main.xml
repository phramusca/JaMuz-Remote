<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/textColor"
    tools:showIn="@layout/activity_main"
    android:id="@+id/panel_main">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:alpha="0.9">

        <ToggleButton
            android:id="@+id/button_controls_toggle"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            style="@style/ToggleButton"
            android:background="@drawable/ic_toggle_controls" />

        <ToggleButton
            android:id="@+id/button_tags_toggle"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            style="@style/ToggleButton"
            android:background="@drawable/ic_toggle_tags" />

        <ToggleButton
            android:id="@+id/button_playlist_toggle"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            style="@style/ToggleButton"
            android:background="@drawable/ic_toggle_filter" />

        <Button
            android:id="@+id/button_connect"
            android:background="@drawable/remote_off"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:layout_row="0"
            android:layout_column="3"
            android:textColor="@android:color/transparent"
            android:textSize="10sp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_speech"
            android:background="@drawable/ic_action_speech"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Speech"
            android:layout_row="0"
            android:layout_column="4"
            android:textColor="@android:color/transparent"
            android:textSize="10sp"
            android:textAllCaps="false"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/button_sync"
            android:background="@drawable/connect_off_new"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:layout_row="0"
            android:layout_column="5"
            android:textColor="@android:color/transparent"
            android:textSize="10sp"
            android:textAllCaps="false"/>

        <ToggleButton
            android:id="@+id/button_dim_mode"
            android:layout_row="0"
            android:layout_column="6"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            style="@style/ToggleButton"
            android:background="@drawable/ic_toggle_lightbulb"/>

        <ToggleButton
            android:id="@+id/button_connect_toggle"
            android:layout_row="0"
            android:layout_column="7"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            style="@style/ToggleButton"
            android:background="@drawable/ic_toggle_config" />

    </GridLayout>

    <GridLayout android:id="@+id/panel_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingBottom="5dp" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:paddingTop="5dp">

            <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
            <LinearLayout android:id="@+id/dummy"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_column="0"
                android:orientation="horizontal" />

            <TextView android:text="&lt;IP&gt;:&lt;Port&gt; : "

                android:layout_row="0"
                android:layout_column="1"
                android:textColor="@color/textColor"/>

            <EditText android:id="@+id/editText_info"

                android:text="192.168.0.0:2013"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:layout_gravity="left|right"
                android:gravity="center_horizontal"
                android:inputType="text"
                android:layout_row="0"
                android:layout_column="2"
                android:textColor="@color/textColor"
                android:theme="@style/EditText" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:padding="5dp"
                android:background="@drawable/ic_button"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/button_config_connection"
                android:layout_row="0"
                android:layout_column="3"
                android:textAllCaps="false"/>
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:paddingTop="5dp">

            <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0px"
                android:layout_height="0px"
                android:layout_row="0"
                android:layout_column="0"
                android:orientation="horizontal" />

            <TextView
                android:text="Path : "
                android:layout_row="0"
                android:layout_column="1"
                android:paddingEnd="5dp"
                android:textColor="@color/textColor"/>

            <TextView
                android:id="@+id/textViewPath"
                android:textColor="@color/textColor"
                android:enabled="false"
                android:layout_gravity="left|right|center_vertical"
                android:gravity="center_horizontal"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="2000"
                android:maxLines="4"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:padding="5dp"
                android:background="@drawable/ic_button"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse"
                android:id="@+id/button_browse"
                android:layout_row="0"
                android:layout_column="3"
                android:textAllCaps="false"/>

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:paddingTop="5dp">

            <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0px"
                android:layout_height="0px"
                android:layout_row="0"
                android:layout_column="0"
                android:orientation="horizontal" />

            <TextView
                android:text="ReplayGain base volume : "
                android:layout_row="0"
                android:layout_column="1"
                android:paddingEnd="5dp"
                android:textColor="@color/textColor"/>

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:id="@+id/seekBarReplayGain"
                android:layout_gravity="fill_horizontal"
                android:indeterminate="false"
                android:paddingTop="5dp"/>

        </GridLayout>
    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/panel_controls"
        android:paddingTop="5dp" >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="2"
            android:id="@+id/gridLayout"
            android:layout_gravity="center"
            android:alpha="0.7">

            <Button
                android:background="@drawable/ic_button_up"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_volUp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"/>

            <Button
                android:background="@drawable/ic_button_previous"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_previous"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginRight="5dp"/>

            <Button
                android:background="@drawable/ic_button_play"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_play"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_marginRight="5dp"/>

            <Button
                android:background="@drawable/ic_button_next"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_next"
                android:layout_row="0"
                android:layout_column="3"/>

            <Button
                android:background="@drawable/ic_button_down"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_volDown"
                android:layout_row="1"
                android:layout_column="0"/>

            <Button
                android:background="@drawable/ic_button_rewind"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_rewind"
                android:layout_row="1"
                android:layout_column="1"/>

            <Button
                android:background="@drawable/ic_button_pullup"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_pullup"
                android:layout_row="1"
                android:layout_column="2"/>

            <Button
                android:background="@drawable/ic_button_forward"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_forward"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_margin="1dp"/>

        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingBottom="5dp">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_playlist"
            android:popupBackground="#DDFFFFFF"
            android:background="@drawable/ic_gradient_spinner"
            android:layout_gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:alpha="0.7"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panel_playlist"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingBottom="5dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ToggleButton
                    android:id="@+id/button_rating_layout"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    style="@style/ToggleButton"
                    android:background="@drawable/ic_toggle_rating_playlist" />

                <TextView android:id="@+id/editText_rating"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:textColor="@color/textColor"
                    android:inputType="textCapSentences|textMultiLine"
                    android:layout_gravity="left|right|center_vertical"/>

                <ToggleButton
                    android:id="@+id/button_tags_panel_toggle"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    style="@style/ToggleButton"
                    android:background="@drawable/ic_toggle_tags_playlist" />

                <TextView android:id="@+id/editText_tag"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:textColor="@color/textColor"
                    android:inputType="textCapSentences|textMultiLine"
                    android:layout_gravity="left|right|center_vertical"/>

                <ToggleButton
                    android:id="@+id/button_genres_panel_toggle"
                    android:layout_row="0"
                    android:layout_column="4"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    style="@style/ToggleButton"
                    android:background="@drawable/ic_toggle_genres_playlist"/>

                <TextView android:id="@+id/editText_genre"
                    android:layout_row="0"
                    android:layout_column="5"
                    android:textColor="@color/textColor"
                    android:inputType="textCapSentences|textMultiLine"
                    android:layout_gravity="left|right|center_vertical"/>
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/panel_rating_playlist_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_rating_operator"
                android:text=">="
                android:background="@drawable/ic_button"
                android:layout_gravity="center_vertical"
                android:alpha="0.7"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_clear_rating"
                android:background="@drawable/ic_button_clear_rating"
                android:layout_gravity="center_vertical"
                android:alpha="0.7"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBarPlaylist"
                android:numStars="5"
                android:stepSize="1"
                android:rating="0"
                android:layout_gravity="left"
                android:theme="@style/RatingBar"
                android:paddingTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/panel_tags_playlist_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingBottom="5dp"
            android:layout_row="0"
            android:layout_column="0">

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/panel_tags_playlist"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                app:flexWrap="wrap"
                app:alignItems="flex_start"
                app:alignContent="flex_end" >
            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/panel_genre_playlist_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:paddingBottom="5dp"
                android:layout_row="0"
                android:layout_column="0">

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/panel_genre_playlist"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="5dp"
                    app:flexWrap="wrap"
                    app:alignItems="flex_start"
                    app:alignContent="flex_end" >
                </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/panel_attributes"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/panel_tags"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            app:flexWrap="wrap"
            app:alignItems="flex_start"
            app:alignContent="flex_end" >
        </com.google.android.flexbox.FlexboxLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                android:numStars="5"
                android:stepSize="1"
                android:rating="0"
                android:layout_gravity="left"
                android:theme="@style/RatingBar"
                android:paddingTop="5dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_genre"
                android:popupBackground="#DDFFFFFF"
                android:background="@drawable/ic_gradient_spinner"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:alpha="0.7"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trackInfo"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textFileInfo"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="test\nof\ngravity"
            android:clickable="false"
            android:background="@drawable/rounded_corner"
            android:alpha="0.8"
            android:textColor="@color/textColor"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_gravity="center_horizontal"
            android:indeterminate="false"
            android:paddingTop="5dp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Cover"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:paddingTop="5dp"/>
    </LinearLayout>

</LinearLayout>