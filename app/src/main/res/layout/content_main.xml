<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@android:color/darker_gray"
    tools:showIn="@layout/activity_main">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_info"
            android:enabled="true"
            android:text="192.168.0.15:2013"
            android:layout_gravity="left|right"
            android:gravity="fill_horizontal|left|right"
            android:inputType="text"
            android:layout_row="0"
            android:layout_column="1"
            android:theme="@style/EditText" />

        <Button
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:id="@+id/button_connect"
            android:layout_row="0"
            android:layout_column="2" />

    </GridLayout>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:popupBackground="#DFFFFFFF"
        android:background="@drawable/gradient_spinner"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="2"
            android:id="@+id/gridLayout2"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="0">

            <Button
                android:background="@drawable/button"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/button_volUp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"/>

            <Button
                android:background="@drawable/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;="
                android:id="@+id/button_previous"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center" />

            <Button
                android:background="@drawable/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|| &gt;"
                android:id="@+id/button_play"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="center" />

            <Button
                android:background="@drawable/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="=&gt;"
                android:id="@+id/button_next"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_gravity="center" />

            <Button
                android:background="@drawable/button"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/button_volDown"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center" />

            <Button
                android:background="@drawable/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;&lt;"
                android:id="@+id/button_rewind"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center" />

            <Button
                android:background="@drawable/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="poulpe"
                android:id="@+id/button_pullup"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="center" />

            <Button
                android:background="@drawable/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&gt;&gt;"
                android:id="@+id/button_forward"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_gravity="center" />

        </GridLayout>

    </GridLayout>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:numStars="5"
        android:stepSize="1"
        android:rating="0"
        android:layout_gravity="center_horizontal"
        android:theme="@style/RatingBar"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_gravity="center_horizontal"
        android:indeterminate="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView_conv"
        android:gravity="top|bottom|fill_vertical|center_horizontal"
        android:text=""
        android:clickable="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Cover"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>

</LinearLayout>