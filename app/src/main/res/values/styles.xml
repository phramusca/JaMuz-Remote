    </style>
    <style name="CheckBoxColorTeal" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/textColorTeal</item>
    </style>

    <style name="AppTheme.Grey">
        <item name="colorPrimary">@color/colorPrimaryGrey</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGrey</item>
        <item name="colorAccent">@color/colorAccentGrey</item>
