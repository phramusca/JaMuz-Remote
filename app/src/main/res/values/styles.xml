<resources>

    <!-- Themes. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="textColorDisabled">@color/textColorDisabled</item>
        <item name="textColorError">@color/textColorError</item>
        <item name="android:radioButtonStyle">@style/RadioButtonColor</item>
        <item name="android:checkboxStyle">@style/CheckBoxColor</item>
    </style>
    <style name="RadioButtonColor" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="CheckBoxColor" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/textColor</item>
    </style>

